{% extends 'base.html.twig' %}

{% block title %}Actu index{% endblock %}

{% block body %}
    <h1>Actu index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Text_content</th>
                <th>Publication_date</th>
                <th>Images</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actu in actus %}
            <tr>
                <td>{{ actu.id }}</td>
                <td>{{ actu.title }}</td>
                <td>{{ actu.textContent }}</td>
                <td>{{ actu.publicationDate ? actu.publicationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ actu.images }}</td>
                <td>
                    <a href="{{ path('app_actu_show', {'id': actu.id}) }}">show</a>
                    <a href="{{ path('app_actu_edit', {'id': actu.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_actu_new') }}">Create new</a>
{% endblock %}
