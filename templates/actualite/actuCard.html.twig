{% extends 'base.html.twig' %}

{% block title %}Actus{% endblock %}

{% block body %}
<main class="mt-5 bg-light"> 
    <div class="container p-4">
        <h1 class="display-4 mb-5">Blog</h1> 

        <div class="card mb-4 shadow-sm"> 
            {% if actu.getImages() %}
                <img src="{{ asset('upload/img_actu/' ~ actu.getImages()) }}" alt="{{ actu.getTitle() }}" class="card-img-top"> 
            {% endif %}
            <div class="card-body">
                <h2 class="h3">{{ actu.getTitle() }}</h2> 
                <p class="text-muted">{{ actu.getTextContent()}}</p>
            </div>
        </div>
    </div>
</main>
{% endblock %}
