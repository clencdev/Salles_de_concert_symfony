<div class="col">
    <div class="card mx-auto" style="width: 18rem;"> {# Fixe une largeur standard pour les cartes #}
        {% if actu.getImages() %}
            <img class="card-img-top" src="{{ asset('upload/img_actu/' ~ actu.getImages()) }}" alt="{{ actu.getTitle() }}" />
        {% endif %}
        <div class="card-body d-flex flex-column"> 
            <h5 class="card-title">{{ actu.getTitle() }}</h5>
            <p class="card-text" style="display: -webkit-box; -webkit-line-clamp: 5; -webkit-box-orient: vertical; overflow: hidden;">{{ actu.getTextContent() }}</p> {# Limite le texte Ã  5 lignes #}
            <a href="{{ path('actu_description', {'id': actu.getId()}) }}" class="btn btn-primary mt-auto"> 
                Read more
                <svg class="bi bi-arrow-right-short ms-2" width="1.5em" height="1.5em" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M10.854 5.354a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L9.293 6H1.5a.5.5 0 0 1 0-1h7.793l-2.147-2.146a.5.5 0 1 1 .708-.708l3 3z"/>
                </svg>
            </a>
        </div>
    </div>
</div>
